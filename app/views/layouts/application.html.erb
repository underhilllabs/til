<!DOCTYPE html>
<html>
  <head>
    <title>Til: Today I learned</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">  

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body class="flex flex-col min-w-0">
    <main class="flex-1">
      <header class="container min-w-full shadow-lg">
        <%= render 'shared/logo_header' %>
      </header>

      <div class="container main-wrapper py-5 my-5">
        <div class="container page-wrapper">

          <div class="notices max-w-4xl px-10 mb-5 mx-auto">
            <% if notice %>
              <p class="pl-5 border text-green-900 bg-green-100 border-green-300 notice bg-success"><%= notice %></p>
            <% end %>
            <% if alert %>
              <p class="pl-5 border text-red-900 bg-red-100 border-red-400 alert bg-alert"><%= alert %></p>
            <% end %>
          </div>

          <%= yield %>

        </div>
      </div>
    </main>
    <footer class="flex-shrink footer-wrapper
                  mx-auto container min-w-full">
      <%= render 'shared/footer' %>
    </footer>
  </body>
</html>
